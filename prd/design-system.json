{
  "name": "Royal Design System",
  "version": "1.0.0",
  "description": "A royal-themed design system with cream, red, and yellow colors following the 60-30-10 rule, featuring pixelated elements and bold typography",
  
  "colors": {
    "palette": {
      "primary": {
        "cream": {
          "50": "#FFFEF7",
          "100": "#FFFAED",
          "200": "#FFF5DB",
          "300": "#FFEDC2",
          "400": "#FFE4A8",
          "500": "#F5E6D3",
          "600": "#E8D5B7",
          "700": "#D4C4A8",
          "800": "#C0B299",
          "900": "#A69B87"
        },
        "royal-red": {
          "50": "#FEF2F2",
          "100": "#FDE5E5",
          "200": "#FACCCC",
          "300": "#F5A3A3",
          "400": "#EF7A7A",
          "500": "#DC143C",
          "600": "#C41E3A",
          "700": "#A91B30",
          "800": "#8F1626",
          "900": "#74121D"
        },
        "golden-yellow": {
          "50": "#FFFEF0",
          "100": "#FFFDE0",
          "200": "#FFFBC2",
          "300": "#FFF894",
          "400": "#FFF566",
          "500": "#FFD700",
          "600": "#E6C200",
          "700": "#CCAD00",
          "800": "#B39900",
          "900": "#998500"
        }
      },
      "neutral": {
        "black": "#1A1A1A",
        "white": "#FFFFFF",
        "gray": {
          "100": "#F7F7F7",
          "200": "#E5E5E5",
          "300": "#D4D4D4",
          "400": "#A3A3A3",
          "500": "#737373",
          "600": "#525252",
          "700": "#404040",
          "800": "#262626",
          "900": "#171717"
        }
      }
    },
    "semantic": {
      "background": {
        "primary": "#F5E6D3",
        "secondary": "#FFFAED",
        "accent": "#DC143C"
      },
      "text": {
        "primary": "#1A1A1A",
        "secondary": "#525252",
        "inverse": "#FFFFFF",
        "accent": "#DC143C"
      },
      "interactive": {
        "primary": "#DC143C",
        "secondary": "#FFD700",
        "hover": "#A91B30",
        "active": "#74121D",
        "disabled": "#A3A3A3"
      }
    },
    "distribution": {
      "dominant": "cream (60%)",
      "secondary": "royal-red (30%)",
      "accent": "golden-yellow (10%)"
    }
  },

  "typography": {
    "fontFamilies": {
      "primary": ["Inter", "system-ui", "-apple-system", "sans-serif"],
      "display": ["Playfair Display", "Georgia", "serif"],
      "monospace": ["JetBrains Mono", "Courier New", "monospace"]
    },
    "fontSizes": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem",
      "6xl": "3.75rem",
      "7xl": "4.5rem",
      "8xl": "6rem"
    },
    "fontWeights": {
      "light": 300,
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700,
      "extrabold": 800
    },
    "lineHeights": {
      "tight": 1.25,
      "snug": 1.375,
      "normal": 1.5,
      "relaxed": 1.625,
      "loose": 2
    },
    "letterSpacing": {
      "tighter": "-0.05em",
      "tight": "-0.025em",
      "normal": "0em",
      "wide": "0.025em",
      "wider": "0.05em",
      "widest": "0.1em"
    }
  },

  "spacing": {
    "scale": "8px",
    "values": {
      "0": "0",
      "1": "0.25rem",
      "2": "0.5rem",
      "3": "0.75rem",
      "4": "1rem",
      "5": "1.25rem",
      "6": "1.5rem",
      "8": "2rem",
      "10": "2.5rem",
      "12": "3rem",
      "16": "4rem",
      "20": "5rem",
      "24": "6rem",
      "32": "8rem",
      "40": "10rem",
      "48": "12rem",
      "56": "14rem",
      "64": "16rem"
    }
  },

  "layout": {
    "breakpoints": {
      "xs": "320px",
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1536px"
    },
    "containers": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1400px"
    },
    "grid": {
      "columns": 12,
      "gap": "1.5rem",
      "margin": "1rem"
    }
  },

  "borderRadius": {
    "none": "0",
    "sm": "0.125rem",
    "base": "0.25rem",
    "md": "0.375rem",
    "lg": "0.5rem",
    "xl": "0.75rem",
    "2xl": "1rem",
    "3xl": "1.5rem",
    "full": "9999px"
  },

  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "base": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)",
    "2xl": "0 25px 50px -12px rgba(0, 0, 0, 0.25)",
    "inner": "inset 0 2px 4px 0 rgba(0, 0, 0, 0.06)",
    "royal": "0 8px 32px rgba(220, 20, 60, 0.15)"
  },

  "components": {
    "button": {
      "primary": {
        "background": "#DC143C",
        "color": "#FFFFFF",
        "borderRadius": "0.375rem",
        "padding": "0.75rem 1.5rem",
        "fontSize": "1rem",
        "fontWeight": 600,
        "transition": "all 0.2s ease",
        "hover": {
          "background": "#A91B30",
          "transform": "translateY(-2px)",
          "boxShadow": "0 8px 32px rgba(220, 20, 60, 0.15)"
        }
      },
      "secondary": {
        "background": "#FFD700",
        "color": "#1A1A1A",
        "borderRadius": "0.375rem",
        "padding": "0.75rem 1.5rem",
        "fontSize": "1rem",
        "fontWeight": 600,
        "transition": "all 0.2s ease",
        "hover": {
          "background": "#E6C200",
          "transform": "translateY(-2px)"
        }
      },
      "outline": {
        "background": "transparent",
        "color": "#DC143C",
        "border": "2px solid #DC143C",
        "borderRadius": "0.375rem",
        "padding": "0.75rem 1.5rem",
        "fontSize": "1rem",
        "fontWeight": 600,
        "transition": "all 0.2s ease",
        "hover": {
          "background": "#DC143C",
          "color": "#FFFFFF"
        }
      }
    },
    "card": {
      "default": {
        "background": "#FFFFFF",
        "borderRadius": "0.75rem",
        "padding": "1.5rem",
        "boxShadow": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
        "border": "1px solid #E5E5E5",
        "transition": "all 0.2s ease",
        "hover": {
          "boxShadow": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
          "transform": "translateY(-2px)"
        }
      },
      "royal": {
        "background": "linear-gradient(135deg, #F5E6D3 0%, #FFFAED 100%)",
        "borderRadius": "0.75rem",
        "padding": "1.5rem",
        "boxShadow": "0 8px 32px rgba(220, 20, 60, 0.15)",
        "border": "2px solid #FFD700",
        "transition": "all 0.2s ease"
      }
    },
    "input": {
      "default": {
        "background": "#FFFFFF",
        "border": "2px solid #E5E5E5",
        "borderRadius": "0.375rem",
        "padding": "0.75rem 1rem",
        "fontSize": "1rem",
        "color": "#1A1A1A",
        "transition": "all 0.2s ease",
        "focus": {
          "borderColor": "#DC143C",
          "outline": "none",
          "boxShadow": "0 0 0 3px rgba(220, 20, 60, 0.1)"
        }
      }
    }
  },

  "patterns": {
    "pixelated": {
      "description": "Pixelated design elements inspired by retro aesthetics",
      "implementation": {
        "imageRendering": "pixelated",
        "filter": "contrast(1.1) saturate(1.2)",
        "transition": "all 0.3s cubic-bezier(0.4, 0, 0.2, 1)"
      }
    },
    "cardGrid": {
      "description": "Grid layout for cards with consistent spacing",
      "properties": {
        "display": "grid",
        "gridTemplateColumns": "repeat(auto-fit, minmax(300px, 1fr))",
        "gap": "1.5rem",
        "padding": "2rem"
      }
    },
    "royalGradient": {
      "description": "Signature royal gradient using the color palette",
      "primary": "linear-gradient(135deg, #F5E6D3 0%, #DC143C 50%, #FFD700 100%)",
      "subtle": "linear-gradient(135deg, #F5E6D3 0%, #FFFAED 100%)",
      "accent": "linear-gradient(90deg, #DC143C 0%, #FFD700 100%)"
    }
  },

  "animations": {
    "duration": {
      "fast": "150ms",
      "normal": "300ms",
      "slow": "500ms"
    },
    "easing": {
      "ease": "cubic-bezier(0.4, 0, 0.2, 1)",
      "easeIn": "cubic-bezier(0.4, 0, 1, 1)",
      "easeOut": "cubic-bezier(0, 0, 0.2, 1)",
      "easeInOut": "cubic-bezier(0.4, 0, 0.2, 1)"
    },
    "microInteractions": {
      "hover": {
        "transform": "translateY(-2px)",
        "transition": "transform 0.2s ease"
      },
      "focus": {
        "outline": "2px solid #DC143C",
        "outlineOffset": "2px"
      },
      "active": {
        "transform": "translateY(0)",
        "transition": "transform 0.1s ease"
      }
    }
  },

  "accessibility": {
    "contrast": {
      "minimum": "4.5:1",
      "enhanced": "7:1"
    },
    "touchTargets": {
      "minimum": "44px",
      "recommended": "48px"
    },
    "focusIndicators": {
      "color": "#DC143C",
      "width": "2px",
      "style": "solid",
      "offset": "2px"
    }
  },

  "usage": {
    "colorDistribution": {
      "60": "Use cream tones for backgrounds, large surfaces, and primary content areas",
      "30": "Use royal red for navigation, headers, important sections, and secondary surfaces",
      "10": "Use golden yellow sparingly for call-to-action buttons, highlights, and accent elements"
    },
    "typography": {
      "display": "Use Playfair Display for headlines and royal titles",
      "body": "Use Inter for body text and UI elements",
      "code": "Use JetBrains Mono for code blocks and technical content"
    },
    "spacing": {
      "principle": "Follow 8px grid system for consistent rhythm",
      "sections": "Use larger spacing (32px+) between major sections",
      "components": "Use medium spacing (16-24px) between related components",
      "elements": "Use small spacing (4-8px) between closely related elements"
    }
  }
}