# Backend Environment Variables
FLASK_ENV=development
FLASK_APP=app.py
FLASK_DEBUG=1
SECRET_KEY=your-secret-key-here

# API Configuration
API_HOST=0.0.0.0
API_PORT=5005

# Database Configuration (when implemented)
# DATABASE_URL=postgresql://user:password@localhost:5432/portfolio_db

# LangChain / AI Configuration (when implemented)
# OPENAI_API_KEY=your-openai-api-key
# LANGCHAIN_API_KEY=your-langchain-api-key
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_PROJECT=portfolio-chatbot

# Frontend Environment Variables
# Note: Vite requires VITE_ prefix for env vars to be exposed to client
VITE_API_URL=http://localhost:5000
VITE_APP_TITLE=Portfolio Chatbot

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Security (for production)
# JWT_SECRET_KEY=your-jwt-secret-key
# JWT_ACCESS_TOKEN_EXPIRES=3600

# External Services (if needed)
# REDIS_URL=redis://localhost:6379
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password